{
	"name": "musings-api",
	"version": "1.0.0",
	"main": "src/index.ts",
	"repository": "https://github.com/musings-sphere/musings-api.git",
	"author": "Francis Masha <francismasha96@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prebuild": "rm -rf ./build",
		"build": "tsc",
		"serve": "node build/index.js",
		"start:dev": "NODE_ENV=development nodemon",
		"start": "NODE_ENV=production yarn run serve",
		"db:setup": "ts-node ./src/db/index.ts",
		"eslint": "eslint .",
		"eslint:fix": "eslint \"*/**/*.{js,ts}\" --fix",
		"format-staged": "pretty-quick --staged",
		"husky": "pretty-quick --staged && yarn prettier && yarn tslint",
		"prettier": "prettier --write \"*/**/*.{js,ts}\"",
		"tslint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet",
		"test:unit": "cross-env NODE_ENV=testing jest --no-cache  --detectOpenHandles --runInBand --forceExit",
		"prepare": "husky install",
		"commit": "cz",
		"commit:signed": "cz -S"
	},
	"dependencies": {
		"awilix": "^5.0.1",
		"axios": "^0.21.1",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"express": "^4.17.1",
		"helmet": "^4.6.0",
		"mongodb": "^4.1.1",
		"pg": "^8.7.1",
		"pg-hstore": "^2.3.4",
		"redis": "^3.1.2",
		"reflect-metadata": "^0.1.13",
		"sanitize-html": "^2.4.0",
		"sequelize": "^6.6.5",
		"sequelize-cli": "^6.2.0",
		"swagger-ui-express": "^4.1.6",
		"uuid": "^8.3.2",
		"validator": "^13.6.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@trivago/prettier-plugin-sort-imports": "^2.0.4",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/faker": "^5.5.8",
		"@types/jest": "^27.0.1",
		"@types/mongodb": "^4.0.7",
		"@types/node": "^16.7.4",
		"@types/sanitize-html": "^2.3.2",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/uuid": "^8.3.1",
		"@types/validator": "^13.6.3",
		"@typescript-eslint/eslint-plugin": "^4.29.3",
		"@typescript-eslint/parser": "^4.29.3",
		"commitizen": "^4.2.4",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^10.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-prettier": "3.4.1",
		"faker": "^5.5.3",
		"husky": "^7.0.2",
		"jest": "^27.1.0",
		"nodemon": "^2.0.12",
		"prettier": "2.3.2",
		"pretty-quick": "3.1.1",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2"
	}
}
