{
	"name": "musings-api",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/musings-sphere/musings-api.git",
	"author": "Francis Masha <francismasha96@gmail.com>",
	"license": "MIT",
	"private": true,
	"workspaces": {
		"packages": [
			"shared",
			"blog-service"
		],
		"installConfig": {
			"hoistingLinits": [
				"**"
			]
		}
	},
	"scripts": {
		"build:shared": "cd shared && yarn build",
		"build:blog-service": "cd blog-service && yarn build",
		"build": "yarn build:shared && yarn build:blog-service",
		"eslint": "eslint .",
		"eslint:fix": "eslint \"*/**/*.{js,ts}\" --fix",
		"format-staged": "pretty-quick --staged",
		"husky": "pretty-quick --staged && yarn prettier && yarn tslint",
		"prettier": "prettier --write shared/**/* blog-service/**/*",
		"tslint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet",
		"test:unit": "cross-env NODE_ENV=testing jest --no-cache  --detectOpenHandles --runInBand --forceExit",
		"prepare": "husky install",
		"commit": "cz",
		"commit:signed": "cz -S"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@types/faker": "^5.5.7",
		"@types/jest": "^26.0.24",
		"@typescript-eslint/eslint-plugin": "^4.28.5",
		"@typescript-eslint/parser": "^4.28.5",
		"commitizen": "^4.2.4",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^10.0.0",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-prettier": "3.4.0",
		"faker": "^5.5.3",
		"husky": "^7.0.1",
		"jest": "^27.0.6",
		"nodemon": "^2.0.12",
		"prettier": "2.3.2",
		"pretty-quick": "3.1.1",
		"ts-jest": "^27.0.4",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	}
}
