{
	"name": "musings-api",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/musings-sphere/musings-api.git",
	"author": "Francis Masha <francismasha96@gmail.com>",
	"license": "MIT",
	"private": true,
	"workspaces": {
		"packages": [
			"blog-service"
		],
		"nohoist": [
			"**"
		]
	},
	"scripts": {
		"prebuild": "rm -rf ./build",
		"build": "tsc",
		"postbuild": "cp -R ./assets ./build",
		"eslint": "eslint .",
		"eslint:fix": "eslint \"*/**/*.{js,ts}\" --fix",
		"format-staged": "pretty-quick --staged",
		"husky": "pretty-quick --staged && yarn prettier && yarn tslint",
		"prettier": "prettier --write shared/**/*",
		"postinstall": "husky install",
		"tslint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet",
		"test:unit": "cross-env NODE_ENV=testing jest --no-cache  --detectOpenHandles --runInBand --forceExit"
	},
	"dependencies": {
		"crypto": "^1.0.1",
		"express": "^4.17.1",
		"mongodb": "^4.0.0",
		"reflect-metadata": "^0.1.13",
		"sanitize-html": "^2.4.0",
		"uuid": "^8.3.2",
		"validator": "^13.6.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/faker": "^5.5.7",
		"@types/jest": "^26.0.24",
		"@types/mongodb": "^3.6.20",
		"@types/node": "^16.0.1",
		"@types/sanitize-html": "^2.3.2",
		"@types/uuid": "^8.3.1",
		"@types/validator": "^13.6.3",
		"@typescript-eslint/eslint-plugin": "^4.28.2",
		"@typescript-eslint/parser": "^4.28.2",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-prettier": "3.4.0",
		"faker": "^5.5.3",
		"husky": "^7.0.1",
		"jest": "^27.0.6",
		"nodemon": "^2.0.12",
		"prettier": "2.3.2",
		"pretty-quick": "3.1.1",
		"ts-jest": "^27.0.3",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5"
	}
}
